{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/obj": true,
        "**/bin": true,
        "**/.vs": true
    },
    "files.associations": {
        "*.slnx": "xml",
        "*.csproj": "xml",
        "*.props": "xml",
        "*.targets": "xml"
    },
    "files.eol": "\r\n",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "[json]": { "editor.tabSize": 2 },
    "[yaml]": { "editor.tabSize": 2 },
    "[xml]": { "editor.tabSize": 2 }
}